# --- Kaspi Offers Dashboard (.env.example) ---
# Copy this to .env.local and fill secrets there. Do NOT commit .env.local.

# Merchant Center (cookie) – used by Pricebot offers UI
KASPI_MERCHANT_ID=30141222
KASPI_MERCHANT_API_BASE=https://mc.shop.kaspi.kz
KASPI_MERCHANT_AUTH_MODE=cookie
KASPI_MERCHANT_COOKIE=mc-session=REPLACE_ME; mc-sid=REPLACE_ME

# Shop API (token) – products/classification/orders
SHOP_API_BASE=https://kaspi.kz/shop/api
SHOP_ORDERS_BASE=https://kaspi.kz/shop/api/v2
SHOP_API_TOKEN=REPLACE_ME

# City used by /reprice defaults
DEFAULT_CITY_ID=710000000
NEXT_PUBLIC_DEFAULT_CITY_ID=710000000

# Dev server
PORT=3001